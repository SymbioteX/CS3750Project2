block variables
    title Register | Let's Chat
extends ../layout
block scripts
    script(src='../js/validation.js', type='text/javascript')
block content
    div.registerdiv
        div#register
            h5#wc Welcome!
            h5#ac Please Create a new account:
            div#form_layout

                form(action="register", method="post")

                
                    br
                    
                    label Screen Name (username):
                    input(name='username', type='text')
                    br
                    label Email Address:
                    input(name='email',type='email')
                    br
                    label First Name:
                    input(name='first_name',type='text')
                    br
                    label Last Name:
                    input(name='last_name',type='text')
                    br
                
                    label Password:
                    input#password(name='password',type='password')
                    br
                    label Confirm Password:
                    input#cpassword(name='cpass',type='password')
                    br
                    div.submitdiv
                        div.center
                            input(type="submit" id="submit" value="Register")