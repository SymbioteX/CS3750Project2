block variables
    title Register | Let's Chat
extends ../layout

block content
    div.registerdiv
        div#register
            h5#wc Welcome!
            h5#ac Please Create a new account:
            div#form_layout
                form(name='createaccount')
                    br
                    label First Name:
                    input(type='text', required='', autocomplete='')
                    br
                    label Last Name:
                    input(type='text', required='', autocomplete='')
                    br
                    label Email (username):
                    input(type='email', required='', autocomplete='', onsubmit='return emailValidation(this.value)')
                    br
                    label Password:
                    input#password(type='password', required='', autocomplete='', onsubmit='return passwordValidation(this.value)')
                    br
                    label Confirm Password:
                    input#cpassword(type='password', required='', autocomplete='', onsubmit='return cpasswordValidation(this.value)')
                    br
                    div.submitdiv
                        div.center
                            input(type="submit" id="submit" value="Register")