block variables
    title Register | Let's Chat
extends ../layout






block content
    div.registerdiv
        div#register
            h5#wc Welcome!
            h5#ac Please Create a new account:
            div#form_layout
                form(action="login", method="post")
                
                    br
                    
                    label Screen Name (username):
                    input(name='username', type='text', required='', autocomplete='', onsubmit='')
                    br
                    label Email Address:
                    input(name='email',type='email', required='', autocomplete='' )
                    br
                    label First Name:
                    input(name='first_name',type='text', required='', autocomplete='')
                    br
                    label Last Name:
                    input(name='last_name',type='text', required='', autocomplete='')
                    br
                
                    label Password:
                    input#password(name='password',type='password', required='', autocomplete='')
                    br
                    label Confirm Password:
                    input#cpassword(name='cpass',type='password', required='', autocomplete='')
                    br
                    div.submitdiv
                        div.center
                            input(type="submit" id="submit" value="Register")