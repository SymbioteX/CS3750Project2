block variables
	title Chat | Let's Chat
extends layout

block content
	div.chat
		div#chat-messages
		div#chat-area
			.chat-status
				| Status: 
				span Idle
			input#chat-text(placeholder='Type your message')
			input#send(type='button', value='send')
block logout
	a#logout(href='/users/logout') Logout

block scripts
	script(src='../js/server.js', type='text/javascript')
	script(src='../js/chat.js', type='text/javascript')
	script(src='http://localhost:3700/socket.io/socket.io.js')
